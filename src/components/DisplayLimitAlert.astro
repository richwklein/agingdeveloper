---
/**
 * @name DisplayLimitAlert
 * Component used for for showing an alert when the number of articles exceeds
 * the limit of the page.
 *
 * @param {Props} props - The limit and total.
 * @return {Function} an Astro component factory function.
 *
 * @example
 * <DisplayLimit limit={maxDisplay} total={totalCount} />
 *
 * @todo Add search to message once implemented.
 */
import Alert from '@components/Alert.astro'

interface Props {
  displayed: number
  total: number
  class?: string
}

const { displayed, total, class: className } = Astro.props
const remaining = total - displayed
---

{
  total > displayed ? (
    <Alert severity="info" class:list={className}>
      {`Maximum number of articles displayed, ${remaining} remaining.`}
    </Alert>
  ) : null
}
