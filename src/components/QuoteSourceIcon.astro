---
/**
 * @name QuoteSourceIcon
 * Component used for rendering an icon for the source of a quote.
 *
 * @param {Props} props - The properties of the source.
 * @return {Function} an Astro component factory function.
 *
 * @example
 * <QuoteSourceIcon type={book} />
 */
import { Icon } from 'astro-icon/components'

interface Props {
  type: string
}

const { type } = Astro.props

// Map your known source types to MDI icon names
const iconMap: Record<string, string> = {
  book: 'mdi:book-open-variant-outline',
  movie: 'mdi:movie-open-outline',
  song: 'mdi:music-note-outline',
  speech: 'mdi:microphone-outline',
  show: 'mdi:television-classic',
  other: 'mdi:star-four-points-outline',
}
---

<Icon name={iconMap[type] ?? iconMap.other} class="inline-block h-4 w-4" />
