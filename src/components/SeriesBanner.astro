---
// src/components/SeriesBanner.astro
interface Props {
  seriesTitle: string
  seriesDescription: string
  current: number
  total: number
  prevUrl?: string
  nextUrl?: string
}

const { seriesTitle, seriesDescription, current, total, prevUrl, nextUrl } = Astro.props
---

<aside class="mb-6">
  <div class="mt-4 text-center">
    <h2 class="text-2xl font-semibold text-gray-800">{seriesTitle}</h2>
    <p class="mt-1 text-gray-600">{seriesDescription}</p>
  </div>
</aside>

<div class="mb-8 flex items-center justify-between rounded-lg bg-gray-50 p-4 shadow-sm">
  <div class="flex items-center gap-2 text-sm font-medium text-gray-700">
    <span class="text-xl">ğŸ—‚ï¸</span>
    <span
      >Part <strong>{current}</strong> of <strong>{total}</strong> in <em>{seriesTitle}</em></span
    >
  </div>

  <div class="flex items-center gap-3">
    {
      prevUrl && (
        <a href={prevUrl} class="text-sm text-blue-600 hover:underline">
          â† Previous
        </a>
      )
    }

    <div class="flex gap-1">
      {
        Array.from({ length: total }, (_, i) => (
          <div
            class:list={`h-2 w-2 rounded-full ${i + 1 === current ? 'bg-blue-500' : 'bg-gray-300'}`}
          />
        ))
      }
    </div>

    {
      nextUrl && (
        <a href={nextUrl} class:list="text-sm text-blue-600 hover:underline">
          Next â†’
        </a>
      )
    }
  </div>
</div>
