---
/**
 * @name SocialBar
 * Component for creating a list of social button links.
 *
 * @return {Function} an Astro component factory function.
 *
 * @example
 * <ScrollTop />
 */
import { Icon } from "astro-icon/components"
import LinkExternal from "@components/LinkExternal.astro"

interface Props {
  socials:
    | {
        name: string
        url: string
      }[]
    | undefined
  class?: string
}

const { socials, class: className } = Astro.props
---

<nav class:list={[className]}>
  <ol class:list={["flex items-center gap-1"]}>
    {
      socials?.map((social) => (
        <li>
          <LinkExternal
            to={social.url}
            title={social.name}
            class:list={["block rounded-full p-2", "hover:bg-gray-100 focus:bg-gray-300"]}
          >
            <Icon
              name={`mdi:${social.name.toLowerCase()}`}
              title={social.name}
              class:list={["h-6 w-6 text-primary-main"]}
            />
          </LinkExternal>
        </li>
      ))
    }
  </ol>
</nav>
