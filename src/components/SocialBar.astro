---
import { Icon } from "astro-icon/components"
import ExternalLink from "@components/ExternalLink.astro"

interface Props {
  socials:
    | {
        name: string
        url: string
      }[]
    | undefined
  class?: string
}

const { socials, class: className } = Astro.props
---

<div class:list={["flex items-center gap-1", className]}>
  {
    socials?.map((social) => (
      <ExternalLink
        to={social.url}
        title={social.name}
        class:list={["rounded-full p-2", "hover:bg-gray-100 focus:bg-gray-300"]}
      >
        <Icon
          name={`mdi:${social.name.toLowerCase()}`}
          class:list={["h-6 w-6 text-primary-main"]}
        />
      </ExternalLink>
    ))
  }
</div>
