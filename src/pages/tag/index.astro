---
import Layout from "@layouts/Layout.astro";
import BreadcrumbHeader from "@components/BreadcrumbHeader.astro";
import { getTagsWithCount } from "src/utils";
import TagGrid from "@components/TagGrid.astro";

const { tags, total } = await getTagsWithCount();
---

<Layout title="Tags">
  <BreadcrumbHeader head={{ name: "Tags", path: "/tag" }} class:list={["mb-4"]} />
  <TagGrid tags={tags} total={total} isCategory={false} />
</Layout>
