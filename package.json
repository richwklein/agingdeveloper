{
  "name": "agingdeveloper",
  "private": true,
  "description": "The personal site of Richard Klein",
  "version": "5.7.1",
  "type": "module",
  "scripts": {
    "clean": "rm -rf .astro dist node_modules package-lock.json",
    "upgrade:astro": "npx @astrojs/upgrade",
    "upgrade:tailwind": " npx @tailwindcss/upgrade",
    "dev": "npx astro dev",
    "build": "npx astro check && npx astro build",
    "preview": "npx astro preview",
    "lint": "npx eslint \"**/*.{js,mjs,cjs,ts,astro}\"",
    "lint:fix": "npx eslint --fix \"**/*.{js,mjs,cjs,ts,astro}\"",
    "format": "npx prettier --check \"**/*.{js,mjs,cjs,ts,astro,md,mdx}\"",
    "format:fix": "npx prettier --write \"**/*.{js,mjs,cjs,ts,astro,md,mdx}\"",
    "test": "npx vitest run",
    "test:verbose": "npx vitest run --reporter=verbose",
    "test:coverage": "npx vitest run --coverage",
    "verify": "npm run lint && npm run format && npm run test && npm run build",
    "licenses": "npx license-report --output=table",
    "licenses:html": "npx license-report --output=html > license-report.html"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/netlify": "^6.6.3",
    "@astrojs/sitemap": "^3.6.0",
    "@fontsource/fira-code": "^5.0.18",
    "@fontsource/noto-sans-georgian": "^5.0.22",
    "@fontsource/noto-serif-georgian": "^5.0.20",
    "@fontsource/walter-turncoat": "^5.1.0",
    "@iconify-json/mdi": "^1.1.66",
    "@sindresorhus/slugify": "^3.0.0",
    "@tailwindcss/typography": "^0.5.13",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.5",
    "astro-fuse": "^1.0.1",
    "astro-icon": "^1.1.1",
    "feed": "^5.0.0",
    "fuse.js": "^7.0.0",
    "install": "^0.13.0",
    "license-report": "^6.7.1",
    "markdown-it": "^14.1.0",
    "mdast-util-to-string": "^4.0.0",
    "mime": "^4.0.4",
    "reading-time": "^1.5.0",
    "sanitize-html": "^2.13.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.9.0",
    "@types/markdown-it": "^14.1.2",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^3.0.1",
    "@vitest/eslint-plugin": "^1.1.14",
    "eslint": "^9.9.0",
    "eslint-plugin-astro": "^1.2.3",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.15.0",
    "vitest": "^3.0.1"
  },
  "overrides": {
    "vite": "^6.0.1",
    "@typescript-eslint/utils": {
      "eslint": "^9.9.0"
    },
    "astro-fuse": {
      "astro": "^5.0.4"
    }
  }
}
