{
  "name": "agingdeveloper",
  "private": true,
  "description": "The personal site of Richard Klein",
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "dev": "npx astro dev",
    "build": "npx astro check && npx astro build",
    "preview": "npx astro preview",
    "lint": "npx eslint \"**/*.{js,mjs,cjs,ts,astro}\"",
    "lint:fix": "npx eslint --fix \"**/*.{js,mjs,cjs,ts,astro}\"",
    "format": "npx prettier --check \"**/*.{js,mjs,cjs,ts,astro}\"",
    "format:fix": "npx prettier --write \"**/*.{js,mjs,cjs,ts,astro}\"",
    "test": "npx vitest run",
    "coverage": "npx vitest run --coverage"
  },
  "dependencies": {
    "@astrojs/check": "^0.8.2",
    "@astrojs/mdx": "^3.1.3",
    "@astrojs/netlify": "^5.5.0",
    "@astrojs/sitemap": "^3.1.6",
    "@astrojs/tailwind": "^5.1.0",
    "@fontsource/fira-code": "^5.0.18",
    "@fontsource/noto-sans-georgian": "^5.0.22",
    "@fontsource/noto-serif-georgian": "^5.0.20",
    "@iconify-json/mdi": "^1.1.66",
    "@sindresorhus/slugify": "^2.2.1",
    "@tailwindcss/typography": "^0.5.13",
    "astro": "^4.12.2",
    "astro-icon": "^1.1.0",
    "feed": "^4.2.2",
    "markdown-it": "^14.1.0",
    "mdast-util-to-string": "^4.0.0",
    "mime": "^4.0.4",
    "reading-time": "^1.5.0",
    "sanitize-html": "^2.13.0",
    "tailwindcss": "^3.4.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.9.0",
    "@types/markdown-it": "^14.1.2",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/parser": "^8.1.0",
    "@vitest/coverage-v8": "^2.0.3",
    "eslint": "^9.9.0",
    "eslint-plugin-astro": "^1.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.1.0",
    "vitest": "^2.0.5"
  },
  "overrides": {
    "astro-icon": {
      "@iconify/tools": "^4.0.0"
