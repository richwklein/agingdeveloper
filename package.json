{
  "name": "agingdeveloper",
  "private": true,
  "description": "The personal site of Richard Klein",
  "version": "4.0.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf node_modules package-lock.json",
    "dev": "npx astro dev",
    "build": "npx astro check && npx astro build",
    "preview": "npx astro preview",
    "lint": "npx eslint \"**/*.{js,mjs,cjs,ts,astro}\"",
    "lint:fix": "npx eslint --fix \"**/*.{js,mjs,cjs,ts,astro}\"",
    "format": "npx prettier --check \"**/*.{js,mjs,cjs,ts,astro,md,mdx}\"",
    "format:fix": "npx prettier --write \"**/*.{js,mjs,cjs,ts,astro,md,mdx}\"",
    "test": "npx vitest run",
    "coverage": "npx vitest run --coverage"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.0.1",
    "@astrojs/netlify": "^6.0.0",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/tailwind": "^5.1.3",
    "@fontsource/fira-code": "^5.0.18",
    "@fontsource/noto-sans-georgian": "^5.0.22",
    "@fontsource/noto-serif-georgian": "^5.0.20",
    "@iconify-json/mdi": "^1.1.66",
    "@sindresorhus/slugify": "^2.2.1",
    "@tailwindcss/typography": "^0.5.13",
    "astro": "^5.0.1",
    "astro-icon": "^1.1.1",
    "feed": "^4.2.2",
    "markdown-it": "^14.1.0",
    "mdast-util-to-string": "^4.0.0",
    "mime": "^4.0.4",
    "reading-time": "^1.5.0",
    "sanitize-html": "^2.13.0",
    "tailwindcss": "^3.4.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.9.0",
    "@types/markdown-it": "^14.1.2",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/eslint-plugin": "^1.1.14",
    "eslint": "^9.9.0",
    "eslint-plugin-astro": "^1.2.3",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.15.0",
    "vitest": "^2.1.8"
  },
  "overrides": {
    "@typescript-eslint/utils": {
      "eslint": "^9.9.0"
    },
    "vitest": {
      "vite": "^6.0.1"
    },
    "vite-node": {
      "vite": "^6.0.1"
    },
    "@vitest/mocker@2.1.8": {
      "vite": "^6.0.1"
    }
  }
}
